extends /layout/auth_layout

block content
  .limiter
  .container-login100
    .wrap-login100.p-t-90.p-b-30
      form.login100-form.validate-form(action="/auth/login", method="POST")
        span.login100-form-title.p-b-40
          | Login
        div
          a#facebookBtn.btn-login-with.bg1.m-b-10(href='#')
            i.fa.fa-facebook-official
            | 							페이스북으로 로그인하기
          a#twitterBtn.btn-login-with.bg2.m-b-10(href='#')
            i.fa.fa-twitter
            | 							트위터로 로그인하기
          a#wechatBtn.btn-login-with.bg3(href='#')
            i.fa.fa-weixin
            | 							위챗으로 로그인하기
        .text-center.p-t-55.p-b-30
          span.txt1
            | 로그인
        .wrap-input100.validate-input.m-b-16(data-validate='ID를 입력해 주세요.')
          input.input100(type='email', name='id', placeholder='ID')
          span.focus-input100
        .wrap-input100.validate-input.m-b-20(data-validate='비밀번호를 입력해 주세요.')
          span.btn-show-pass
            i.fa.fa.fa-eye
          input.input100(type='password', name='password', placeholder='비밀번호')
          span.focus-input100
        .container-login100-form-btn
          button.login100-form-btn
            | Login
      .container-login100-form-btn
        button.login100-form-btn#main(style='margin-top:20px;')
          | Main
      .flex-col-c.p-t-224
        span.txt2.p-b-10
          | Don’t have an account?
        a.txt3.bo1.hov1(href='/auth/join')
          | Sign up now
  if message
    script(type="text/javascript").
      alert("#{message}")
  script(src='/js/auth/login.js')
