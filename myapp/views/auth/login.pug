extends /layout/auth_layout

block content
  .limiter
  .container-login100
    .wrap-login100.p-t-90.p-b-30
      form.login100-form.validate-form(action="/auth/login", method="POST")
        span.login100-form-title.p-b-40
          | Login
        div
          a#facebookBtn.btn-login-with.bg1.m-b-10(href='#')
            i.fa.fa-facebook-official
            | 							Login with facebook
          a#twitterBtn.btn-login-with.bg2.m-b-10(href='#')
            i.fa.fa-twitter
            | 							Login with twitter
          a#wechatBtn.btn-login-with.bg3(href='#')
            i.fa.fa-weixin
            | 							Login with wechat
        .text-center.p-t-55.p-b-30
          span.txt1
            | Login with email
        .wrap-input100.validate-input.m-b-16(data-validate='Please enter email: ex@abc.xyz')
          input.input100(type='email', name='email', placeholder='Email')
          span.focus-input100
        .wrap-input100.validate-input.m-b-20(data-validate='Please enter password')
          span.btn-show-pass
            i.fa.fa.fa-eye
          input.input100(type='password', name='pass', placeholder='Password')
          span.focus-input100
        .container-login100-form-btn
          button.login100-form-btn
            | Login
        .flex-col-c.p-t-224
          span.txt2.p-b-10
            | Donâ€™t have an account?
          a.txt3.bo1.hov1(href='/auth/join')
            | Sign up now
  if message
    script(type="text/javascript").
      alert("#{message}")
  script(src='/js/auth/login.js')
