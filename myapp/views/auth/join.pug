extends ../layout/auth_layout

block content
  form.login100-form.validate-form
        span.login100-form-title.p-b-40
          | Join
        div         
        .text-center.p-t-55.p-b-30
          span.txt1
            | CREATE YOUR ACCOUNT
        .wrap-input100.validate-input.m-b-16(data-validate='Please enter email: ex@abc.xyz')
          input.input100(type='text', name='email', placeholder='Email')
          span.focus-input100
        .wrap-input100.validate-input.m-b-20(data-validate='Please enter password')
          span.btn-show-pass
            i.fa.fa.fa-eye
          input.input100(type='password', name='pass', placeholder='Password')
          span.focus-input100
        .wrap-input100.validate-input.m-b-20(data-validate='Please enter your name')
          input.input100(type='text', name='name', placeholder='Name')
          span.focus-input100
        .container-login100-form-btn
          button.login100-form-btn
            | Join        