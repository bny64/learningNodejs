extends /layout/auth_layout

block content  
  .limiter
  .container-login100
    .wrap-login100.p-b-30
      form.login100-form.validate-form(action="/auth/join", method="POST")
        span.login100-form-title
          | Join
        div          
        .text-center.p-t-55.p-b-30
          span.txt1
            | Create your account
        .wrap-input100.validate-input.m-b-16(data-validate='ID를 입력하세요')
          input.input100(type='text', name='id', placeholder='ID')
          span.focus-input100
        .wrap-input100.validate-input.m-b-20(data-validate='비밀번호를 입력하세요')
          span.btn-show-pass
            i.fa.fa.fa-eye
          input.input100(type='password', name='pass', placeholder='비밀번호')
          span.focus-input100
        .wrap-input100.validate-input.m-b-16(data-validate='예시 : ex@abc.xyz')
          input.input100(type='email', name='email', placeholder='Email')
          span.focus-input100        
        .wrap-input100.validate-input.m-b-16(data-validate='이름을 입력하세요')
          input.input100(type='text', name='name', placeholder='이름')
          span.focus-input100
        .wrap-input100.validate-input.m-b-16(data-validate='예시 : 000-0000-0000')
          input.input100(type='text', name='phoneNumber', placeholder='휴대폰 번호')
          span.focus-input100
        .wrap-input100.validate-input.m-b-16(data-validate='예시 : 1919-03-01')
          input.input100#datePicker(type='text', name='birthday', placeholder='birthday')
          span.focus-input100
        .wrap-input100.validate-input.m-b-16
          span.emailAd 이메일 수신여부
          br
          span.emailAd 수신합니다.
          span
            input(type='radio', name='emailYn' checked value='Y')
          br
          span.emailAd 수신하지 않습니다.
          span
            input(type='radio', name='emailYn' value='N')          
        .wrap-input100.validate-input.m-b-16.datepicker(data-validate='Please enter your introduction')
          textarea.input100(type='text', name='introduction', placeholder='introduction')
          span.focus-input100
        .container-login100-form-btn
          button.login100-form-btn(style='margin-top:40px;')
            | Join            
      .container-login100-form-btn
          button.login100-form-btn#loginBtn(style='margin-top:20px;')
            | Login        
  if message
    script(type="text/javascript").
      alert("#{message}")
  script(src='/js/auth/join.js')